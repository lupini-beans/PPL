%Smiley Faces:
%The following program has a variety of smiley face
%parts as various procedures to be assembled in the main program

/CreateSmiles{
<</PageSize [400 400]>> setpagedevice
% Eyes
/DoSunglassRim{
  newpath
  moveto
  lineto
  0 0 0 setrgbcolor
  3 setlinewidth
  stroke
} def

/DoSunglassBase{
  newpath
  27 180 0 arc
  closepath
  gsave
  0 0 0 setrgbcolor
  fill
  grestore
  1.5 setlinewidth
  stroke
} def

/DoGlare{
  newpath
  moveto
  lineto
  lineto
  lineto
  closepath
  1 1 1 setrgbcolor
  fill
  1 setlinewidth
  stroke
} def


/DoEye1 {
  newpath
  5 0 360 arc
  closepath
  gsave
  1 setgray
  fill
  grestore
  0.5 setlinewidth
  0 setgray
  stroke
} def

/DoEye2 {
  newpath
  5 0 360 arc
  closepath
  gsave
  1 setgray
  fill
  grestore
  0.5 setlinewidth
  0 setgray
  stroke
} def

/DoIris1 {
  newpath
  2 0 360 arc
  closepath
  gsave
  0 1 1 setrgbcolor
  fill
  grestore
  0 1 1 setrgbcolor
  stroke
} def

/DoIris2 {
  newpath
  2 0 360 arc
  closepath
  gsave
  0 1 1 setrgbcolor
  fill
  grestore
  0 1 1 setrgbcolor
  stroke
} def

/DoPupil1{
  newpath
  1 0 360 arc
  closepath
  gsave
  0 setgray
  fill
  grestore
  0 setgray
  stroke
} def

/DoPupil2{
  newpath
  1 0 360 arc
  closepath
  gsave
  0 setgray
  fill
  grestore
  stroke
} def

/DoSimpleEye{
  newpath
  moveto
  0 5 rlineto
  5 0 rlineto
  0 -5 rlineto
  -5 0 rlineto
  closepath
  1 1 1 setrgbcolor
  fill
} def

% Nose
/DoNose1{
  newpath
  moveto
  lineto
  1 1 1 setrgbcolor
  3 setlinewidth
  stroke
} def

% Faces
/DoFace1 {
  gsave
  0 0 moveto
  newpath
  60 0 360 arc
  closepath
  gsave
  1.0 0.83 0.0 setrgbcolor
  fill
  grestore
  stroke
} def

/DoFace2{
  newpath
  moveto
  0 120 rlineto
  120 0 rlineto
  0 -120 rlineto
  -120 0 rlineto
  closepath
  0 0 0 setrgbcolor
  1 setlinewidth
  fill
} def

/DoFace3{
  gsave
  0 0 moveto
  newpath
  60 0 360 arc
  closepath
  gsave
  0.33 0.67 0.67 setrgbcolor
  fill
  grestore
  0 setgray
  1 setlinewidth
  stroke
} def

% Mouths
/DoSideSmile{
  newpath
  10 270 90 arc
  3 setlinewidth
  stroke
} def

/DoFrown{
  newpath
  10 0 180 arc
  1.5 setlinewidth
  stroke
} def

/DoOpenMouth{
  newpath
  moveto
  lineto
  0 0 0 setrgbcolor
  stroke
} def

/DoOpenMouth2{
  newpath
  28.5 180 0 arc
  closepath
  fill
  1 setlinewidth
  stroke
} def


% Signature
/DoDesignedBy{
  /Times-Roman findfont
  14 scalefont
  setfont
  newpath
  moveto
  (Created and designed by:) show
} def

/DoSignature{
  /Times-Roman findfont
  14 scalefont
  setfont
  newpath
  moveto
  (Emily Lupini) show
} def
} def
%---------Main------------

CreateSmiles
